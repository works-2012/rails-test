<p id="notice"><%= notice %></p>

<table>
<tr>
<th align=left>
  <%= @post_author %>
</th>

<th>
  <%= @post.title %>
  <hr>
</th>

</tr><tr>

<td align=left>
  <%= @post.created_at %> | 
</td>

<td>
  <%= @post.text %>
</td>

</tr><tr>

<td colspan=2>
  <b><%= link_to 'Tags:', tags_path %></b>
  <%= @post.tags.map { |t| t.text }.join(", ") %>
  <hr>
</td>

</tr>
</table>

<% if user_signed_in? && @post_author != 'unsigned' %>
  <% if current_user.id == @user.id %>
    <%= link_to 'Edit', edit_post_path(@post) %> | 
  <% end %>
<% end %>

<b><%= link_to 'Back', posts_path %></b>

<%= render "comments/comment" %>
